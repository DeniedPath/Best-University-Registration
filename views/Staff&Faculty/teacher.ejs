                            <td>33/36</td>
                            <td>
                                <div class="score-bar">
                                    <div class="score-fill" style="width: 23%"></div>
                                    <span>23</span>
                                </div>
                            </td>
                            <td><div class="attention-badge">45</div></td>
                            <td><div class="action-badge">5</div></td>
                        </tr>
                        <!-- Repeat for other students -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
