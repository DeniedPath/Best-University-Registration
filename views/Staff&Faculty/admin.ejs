<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo-container">
                <div class="logo"></div>
                <div class="admin-name">Name<br><span>Administrator</span></div>
            </div>
            
            <nav class="side-nav">
                <div class="nav-item">
                    <span class="icon">üë•</span>
                    Event Management
                </div>
                <div class="nav-item">
                    <span class="icon">üë®‚Äçüè´</span>
                    Teachers
                </div>
                <div class="nav-item">
                    <span class="icon">üë®‚Äçüéì</span>
                    Students
                </div>
                <div class="nav-item">
                    <span class="icon">üìö</span>
                    Courses
                </div>
                <div class="nav-item">ETC</div>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navigation -->
            <nav class="top-nav">
                <div class="brand">GreenField University</div>
                <div class="search-bar">
                    <input type="text" placeholder="What are you looking for?">
                </div>
                <div class="nav-links">
                    <a href="#courses">Teachers</a>
                    <a href="#purchases">Management</a>
                    <a href="#help">Help Center</a>
                    <div class="user-profile">
                        <img src="/path/to/profile.jpg" alt="Profile">
                        <span>Name ‚ñº</span>
                    </div>
                </div>
            </nav>

            <!-- Dashboard Content -->
            <div class="dashboard-content">
                <h1>DashBoard</h1>
                
                <!-- Stats Grid -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>TOTAL STUDENTS</h3>
                        <div class="stat-value">4000</div>
                        <div class="stat-change">5% since last week</div>
                    </div>
                    
                    <div class="stat-card">
                        <h3>New Students</h3>
                        <div class="stat-value">320</div>
                        <div class="stat-change">20% since last week</div>
                    </div>

                    <div class="stat-card">
                        <h3>Total courses</h3>
                        <div class="stat-value">30</div>
                    </div>

                    <div class="stat-card">
                        <h3>Visitors</h3>
                        <div class="stat-value">2000</div>
                        <div class="stat-change">-5% since last week</div>
                    </div>
                </div>

                <!-- Graph Section -->
                <div class="graph-section">
                    <canvas id="subjectMarksChart"></canvas>
                </div>

                <!-- Student List -->
                <div class="student-list">
                    <div class="list-header">
                        <h3>Student List</h3>
                        <div class="list-actions">
                            <button class="add-new">Add New</button>
                            <button class="tools">Tools ‚ñº</button>
                        </div>
                    </div>
                    
                    <table>
                        <thead>
                            <tr>
                                <th>Student Name</th>
                                <th>Assigned teacher</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% students.forEach(student => { %>
                                <tr>
                                    <td><%= student.name %></td>
                                    <td>Brian</td>
                                    <td>12/05/2026</td>
                                    <td>10:15</td>
                                    <td><button class="action-btn">Actions ‚ñº</button></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>