                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="dashboard-content">
            <div class="header">
                <h1>Dashboard</h1>
                <div class="class-selector">
                    <span>Class A</span>
                    <div class="student-count">
                        <span class="student-icons">ðŸ‘¤ðŸ‘¤ðŸ‘¤ðŸ‘¤</span>
                        <span class="count">+8</span>
                    </div>
                </div>
                <div class="alerts">
                    <span class="alert-icon">ðŸ””</span>
                    <span class="alert-count">2</span>
                </div>
            </div>

            <!-- Performance Metrics -->
            <div class="metrics-container">
                <div class="metric-card">
                    <div class="metric-title">Overall Class Score</div>
                    <div class="circular-progress">
                        <div class="progress-value">40%</div>
                    </div>
                    <div class="metric-subtitle">Grade Average: 50%</div>
                </div>

                <div class="metric-card">
                    <div class="metric-title">Work Assigned</div>
                    <div class="circular-progress">
                        <div class="progress-value">40%</div>
                    </div>
                    <div class="metric-subtitle">Grade Average: 50%</div>
                </div>

                <div class="student-cards">
                    <!-- Student profile cards here -->
                </div>
            </div>

            <!-- Student Proficiency Table -->
            <div class="proficiency-section">
                <h2>Student Proficiency</h2>
                <table class="proficiency-table">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Work Completed</th>
                            <th>Average Score</th>
                            <th>Needs attention</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="student-name">
                                    <span class="profile-icon">ðŸ‘¤</span>
